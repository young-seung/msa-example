  "scripts": {
    "prettier": "prettier --write --config .prettierrc \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix",
    "test": "jest",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "nodemon"
  }
