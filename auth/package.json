  "jest": {
    "verbose": false,
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
